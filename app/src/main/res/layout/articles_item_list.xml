<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/card_view_padding"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/article_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardElevation="@dimen/card_view_elevation"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/article_item_list_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_image_height"
                android:layout_alignParentTop="true"
                card_view:placeholderImage="@drawable/card_view_image_placeholder"/>

            <TextView
                android:id="@+id/article_item_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_item_list_image"
                android:padding="@dimen/card_view_content_padding"
                android:textSize="@dimen/card_view_title_text_size"
                android:textColor="@android:color/black"
                tools:text="Article's title"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>