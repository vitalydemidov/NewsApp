<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.vitalydemidov.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".NewsApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".sources.SourcesActivity"
            android:label="@string/activity_sources_label"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".articles.ArticlesActivity"
            android:label="@string/activity_articles_label"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".sources.SourcesActivity"/>

    </application>

</manifest>